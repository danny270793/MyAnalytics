# ============================================================
# Root EditorConfig
# ============================================================
root = true
# Indicates this is the root EditorConfig file. 
# No parent .editorconfig files will be considered.

# ============================================================
# Global settings (all files)
# ============================================================
[*]
charset = utf-8                   # Use UTF-8 encoding for all files
end_of_line = lf                  # Use LF line endings (Unix style)
insert_final_newline = true       # Ensure file ends with a newline
trim_trailing_whitespace = true   # Remove trailing spaces/tabs

# Indentation
indent_style = space              # Use spaces, not tabs
indent_size = 4                   # 4 spaces per indentation level
tab_width = 4                     # Tab width when a tab character is used

# Max line length
max_line_length = 120             # Recommended max line length for readability

# ============================================================
# C# specific settings
# ============================================================
[*.cs]

# -----------------------------
# Member qualification
# -----------------------------
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion
# Do not require "this." for fields, properties, methods, or events.
# "false:suggestion" means itâ€™s optional; the analyzer may suggest it.

# -----------------------------
# var usage
# -----------------------------
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion
# Use 'var' for built-in types (int, string) and when type is obvious.
# Otherwise, prefer explicit type.

# -----------------------------
# Expression-bodied members
# -----------------------------
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion
csharp_style_expression_bodied_operators = when_on_single_line:suggestion
# Use expression-bodied syntax (=>) for short methods, properties, operators
# if they fit on a single line.

# -----------------------------
# Null-checking / conditional calls
# -----------------------------
csharp_style_conditional_delegate_call = true:suggestion
csharp_style_null_checking = true:suggestion
# Prefer using ?. for delegates and null-checking.

# -----------------------------
# Braces and newlines
# -----------------------------
csharp_new_line_before_open_brace = all
# Opening braces on a new line for classes, methods, properties, etc.

csharp_new_line_between_query_expression_clauses = true
# Adds line breaks between LINQ query clauses.

# -----------------------------
# Spacing rules
# -----------------------------
csharp_space_after_cast = true
# Space after a type cast: (int) x instead of (int)x

csharp_space_before_colon_in_inheritance_clause = true
# Space before ':' in class inheritance: class A : B

csharp_space_after_keywords_in_control_flow_statements = true
# Space after keywords in statements: if (condition) {...}

# -----------------------------
# Using directives
# -----------------------------
dotnet_sort_system_directives_first = true
# Puts "using System.*" directives first, then your namespaces

# -----------------------------
# File header template (optional)
# -----------------------------
file_header_template = copyright
# You can add a standard header for license or copyright purposes.

# ============================================================
# Async method naming convention
# ============================================================
# Enforces that all async methods end with "Async"

dotnet_naming_rule.async_methods_must_end_with_async.severity = suggestion
dotnet_naming_rule.async_methods_must_end_with_async.symbols = async_methods
dotnet_naming_rule.async_methods_must_end_with_async.style = end_with_async

dotnet_naming_symbols.async_methods.applicable_kinds = method
dotnet_naming_symbols.async_methods.required_modifiers = async

dotnet_naming_style.end_with_async.capitalization = pascal_case
dotnet_naming_style.end_with_async.required_suffix = Async
# Example:
# Good: Task<User> GetUserAsync();
# Bad:  Task<User> GetUser();
